<h2>Player Stats</h2>

<% if ( defined?( @player_name )).nil?  %>
<% else %>
  <p><%= @player_name  %></p>
<% end %>

<table>
  <tbody>
    <% @sorted_scores.each do |key, value| %>
      <tr><th colspan='2'><%= key %></th></tr>
      <% value.each do |player| %>
        <tr><td><%= player[0] %></td><td><%= player[1] %></td></tr>
      <% end %>
    <% end %>
  </tbody>
</table>
